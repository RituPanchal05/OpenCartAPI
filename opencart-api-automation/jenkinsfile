pipeline {
    agent any

tools {
    maven 'Maven 3.9.9'
    jdk 'Java 17'
}


   
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/RituPanchal05/OpenCartAPI.git'  // Replace with your repo
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }

       
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
            echo 'Build completed!'
        }
    }
}
