pipeline {
    agent any

    tools {
    jdk 'Java 17'   // Name must match the one configured in Jenkins
    maven 'Maven 3.10.1' // if using Maven too
}


   
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/RituPanchal05/OpenCartAPI.git'  // Replace with your repo
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }

        stage('Allure Report') {
            steps {
                allure includeProperties: false, jdk: '', results: [[path: "${env.REPORT_DIR}"]]
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
            echo 'Build completed!'
        }
    }
}
